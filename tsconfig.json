{
  "compilerOptions": {
    "resolveJsonModule": false,
    "module": "esnext",
    "skipLibCheck": true,
    "paths": {
      "common/*": ["./src/common/*"],
      "animations/*": ["./src/animations/*"],
      "screens/*": ["./src/screens/*"],
      "hooks/*": ["./src/hooks/*"],
      "components/*": ["./src/components/*"],
      "navigation/*": ["./src/navigation/*"],
      "assets/*": ["./src/assets/*"],
      "services/*": ["./src/services/*"],
      "helper/*": ["./src/helper/*"],
      "@redux/*": ["./src/redux/*"],
      "api/*": ["./src/api/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es7"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
